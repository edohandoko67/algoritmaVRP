<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textViewOfficerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewOfficerLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorUtama"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewOfficerLong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorUtama"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewOfficerCap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorUtama"
            android:text="TextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/editimageoff3"
            android:src="@drawable/ic_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="70dp"/>

        <ImageView
            android:id="@+id/deleteimageoff3"
            android:src="@drawable/ic_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"/>
    </LinearLayout>
</LinearLayout>